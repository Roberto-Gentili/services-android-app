<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RGServices" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_blue_700</item>
        <item name="colorPrimaryDark">@color/dark_blue_700</item>
        <item name="colorPrimaryVariant">@color/dark_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/dark_blue_500</item>
        <item name="colorSecondaryVariant">@color/dark_blue_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>

        <!-- Action bar -->
        <item name="actionBarSize">36dp</item>-->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>

        <!-- Three dots menu -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/threeDotMenuButtonStyle</item>
        <item name="popupMenuBackground">@color/dark_blue_500</item>
        <item name="android:itemTextAppearance">@style/itemTextAppearanceStyle</item>
    </style>

    <!-- Three dots menu -->
    <style name="threeDotMenuButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>
    <style name="itemTextAppearanceStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Action bar -->
    <style name="actionBarStyle" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">?attr/colorPrimary</item>
    </style>

</resources>