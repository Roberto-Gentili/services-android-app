<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RGServices" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/action_bar_background_color</item>
        <item name="colorPrimaryDark">@color/action_bar_background_color</item>
        <item name="colorPrimaryVariant">@color/popup_menu_background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/action_bar_title_text_color</item>
        <item name="colorSecondaryVariant">@color/action_bar_title_text_color</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- PreferenceScreen
        <item name="preferenceTheme">@style/PreferenceTheme</item>
        -->
        <!-- ListPreference
        <item name="textColorAlertDialogListItem">@color/text_default_color</item>
        -->


        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!--
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        -->
        <!-- Action bar -->
        <item name="actionBarSize">36dp</item>-->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/actionBarStyle</item>

        <!-- Three dots menu -->
        <item name="android:navigationBarColor">@color/navigation_bar_color</item>
        <item name="actionOverflowButtonStyle">@style/threeDotMenuButtonStyle</item>
        <item name="popupMenuBackground">@color/popup_menu_background_color</item>
        <item name="android:itemTextAppearance">@style/itemTextAppearanceStyle</item>
    </style>

    <!-- Three dots menu -->
    <style name="threeDotMenuButtonStyle" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/three_dot_menu_button_tint</item>
    </style>
    <style name="itemTextAppearanceStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/three_dot_menu_item_text_color</item>
    </style>

    <!-- Action bar -->
    <style name="actionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/action_bar_background_color</item>
        <item name="titleTextStyle">@style/actionBarTextStyle</item>
        <item name="android:titleTextStyle">@style/actionBarTextStyle</item>
    </style>
    <style name="actionBarTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <!--
        <item name="android:textStyle">bold</item>
        -->
        <item name="android:textSize">22sp</item>
    </style>

