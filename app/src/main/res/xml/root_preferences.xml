<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:title="@string/settingsLabelText">

    <PreferenceCategory app:title="Binance">
        <EditTextPreference
            app:key="binanceApiKey"
            app:title="@string/apiKeyLabelText"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="binanceApiSecret"
            app:title="@string/apiSecretsLabelText"
            app:useSimpleSummaryProvider="false" />
        <CheckBoxPreference
            app:key="binanceWalletEnabled"
            app:title="@string/enabledLabelText"
            app:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Crypto.com">
        <EditTextPreference
            app:key="cryptoComApiKey"
            app:title="@string/apiKeyLabelText"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="cryptoComApiSecret"
            app:title="@string/apiSecretsLabelText"
            app:useSimpleSummaryProvider="false" />
        <CheckBoxPreference
            app:key="cryptoComWalletEnabled"
            app:title="@string/enabledLabelText"
            app:defaultValue="true" />
        <EditTextPreference
            app:key="cryptoComTimeOffset"
            app:title="@string/timeOffsetLabelText"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="GitHub">
        <EditTextPreference
            app:key="gitHubAuthorizationToken"
            app:title="@string/authorizationTokenLabelText"
            app:useSimpleSummaryProvider="false" />
    </PreferenceCategory>

    <PreferenceCategory app:title="General settings">
        <EditTextPreference
            app:key="totalInvestment"
            app:title="@string/totalInvestmentLabelText"
            app:useSimpleSummaryProvider="true"
            />

        <CheckBoxPreference
            app:key="showRUPEI"
            app:title="@string/showRUPEILabelText"
            app:defaultValue="true"
            app:singleLineTitle="false" />

        <CheckBoxPreference
            app:key="showDifferenceBetweenUPAndRUPEI"
            app:title="@string/showDifferenceBetweenUPAndRUPEILabelText"
            app:defaultValue="false"
            app:singleLineTitle="false" />

        <CheckBoxPreference
            app:key="useAlwaysTheDollarCurrencyForBalances"
            app:title="@string/useAlwaysTheDollarCurrencyForBalancesLabelText"
            app:defaultValue="false" />

        <CheckBoxPreference
            app:key="showNaNAmounts"
            app:title="@string/showNaNAmountsLabelText"
            app:defaultValue="true" />

        <ListPreference
            app:key="unitPriceRetrievingMode"
            app:title="Unit price retrieving mode"
            app:defaultValue="3"
            app:entries="@array/unitPriceRetrievingModeLabels"
            app:entryValues="@array/unitPriceRetrievingModeIds"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="coinsToBeAlwaysDisplayed"
            app:title="@string/coinsToBeAlwaysDisplayedLabelText"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="BTC, ETH"/>

        <EditTextPreference
            app:key="intervalBetweenRequestGroups"
            app:title="@string/intervalBetweenRequestGroupsTextLabel"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="threadPoolSize"
            app:title="@string/threadPoolSizeTextLabel"
            app:defaultValue="6"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>